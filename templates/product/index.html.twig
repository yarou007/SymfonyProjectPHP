{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<h1>Product</h1>

<p>
  <a href="{{ path('product_create') }}">Create New Product</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Category</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for p in products %}
    <tr>
      <td>{{ p.id }}</td>
      <td>{{ p.productName }}</td>
      <td>{{ p.productQuantity }}</td>
      <td>{{ p.productUnitPrice }}</td>
      <td>{{ p.category ? p.category.categoryName : '' }}</td>
      <td>
        <a class="btn btn-primary" href="{{ path('product_edit_form', {id: p.id}) }}">Edit</a>
      </td>
      <td>
        <form method="post" action="{{ path('product_delete', {id: p.id}) }}" style="display:inline;">
          <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ p.id) }}">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
