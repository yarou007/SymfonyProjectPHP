{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<h2>Edit Product</h2>

{% if product is null %}
  <p>Product was not found with this id</p>
{% else %}
<form method="post" action="{{ path('product_edit', {id: product.id}) }}">
  <div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" name="ProductName" class="form-control" value="{{ product.productName }}">
  </div>

  <div class="mt-3">
    <label class="form-label">Quantity</label>
    <input type="number" name="ProductQuantity" class="form-control" value="{{ product.productQuantity }}">
  </div>

  <div class="mt-3">
    <label class="form-label">Unit Price</label>
    <input type="text" name="ProductUnitPrice" class="form-control" value="{{ product.productUnitPrice }}">
  </div>

  <div class="mt-3">
    <label class="form-label">Category</label>
    <select name="CategoryId" class="form-control">
      {% for c in categories %}
        <option value="{{ c.id }}" {% if product.category and product.category.id == c.id %}selected{% endif %}>
          {{ c.categoryName }}
        </option>
      {% endfor %}
    </select>
  </div>

  <div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
{% endif %}
{% endblock %}
