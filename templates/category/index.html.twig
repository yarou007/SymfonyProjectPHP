{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<h1>Category</h1>

<p>
  <a href="{{ path('category_create') }}">Create New Category</a>
</p>

{% for message in app.flashes('error') %}
  <div style="color:red;">{{ message }}</div>
{% endfor %}

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>CategoryName</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for item in categories %}
    <tr>
      <td>{{ item.id }}</td>
      <td>{{ item.categoryName }}</td>
      <td>
        <a class="btn btn-primary" href="{{ path('category_edit_form', {id: item.id}) }}">Edit</a>
      </td>
      <td>
        <form method="post" action="{{ path('category_delete', {id: item.id}) }}" style="display:inline;">
          <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ item.id) }}">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
